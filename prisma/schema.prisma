generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  
}

enum NotificationType {
  COMMENT
  COLLABORATION
  SALE
  MENTION
  SYSTEM
}

model Notification {
  id          Int              @id @default(autoincrement())
  recipientId Int
  recipient   User             @relation(fields: [recipientId], references: [id], onDelete: Cascade)
  
  type        NotificationType
  title       String
  message     String
  data        Json?            // For flexible metadata (e.g., manuscriptId, senderId)
  
  isRead      Boolean          @default(false)
  createdAt   DateTime         @default(now())

  @@index([recipientId])
}

enum UserRole {
  ADMIN
  AUTHOR
  EDITOR
  PUBLISHER
  READER
}

model User {
  id              Int       @id @default(autoincrement()) // Changed to Int for easier handling, or keep String @default(uuid())
  email           String    @unique
  passwordHash    String    // Renamed from 'password' to match standard security practices
  fullName        String    // Used instead of 'username' per Page 7 of PDF
  bio             String?
  avatarUrl       String?
  role            UserRole  @default(READER)
  
  // Auth Fields
  otpCode         String?
  otpVerified     Boolean   @default(false)

  // Relations
  manuscripts    Manuscript[]    @relation("AuthorManuscripts")
  collaborations Collaboration[]
  notifications  Notification[]
  comments       Comment[]
  reviews        Review[]

  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
}

enum ManuscriptStatus {
  DRAFT
  PUBLISHED
}

model Manuscript {
  id              Int              @id @default(autoincrement())
  title           String
  subtitle        String?
  genre           String?
  description     String?          @db.Text
  tags            String[]
  coverUrl        String?
  
  status          ManuscriptStatus @default(DRAFT)
  reads           Int              @default(0)
  price           Float            @default(0.0)

  authorId        Int
  author          User             @relation("AuthorManuscripts", fields: [authorId], references: [id])
  
  collaborations  Collaboration[]
  chapters        Chapter[]
  
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
}

model Chapter {
  id              Int              @id @default(autoincrement())
  manuscriptId    Int
  manuscript      Manuscript       @relation(fields: [manuscriptId], references: [id], onDelete: Cascade)
  
  title           String
  content         String?          @db.Text
  order           Int              @default(0)
  
  comments        Comment[]
  reviews         Review[]
  
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt

  @@index([manuscriptId])
}

model Comment {
  id              Int              @id @default(autoincrement())
  chapterId       Int
  chapter         Chapter          @relation(fields: [chapterId], references: [id], onDelete: Cascade)
  
  authorId        Int
  author          User             @relation(fields: [authorId], references: [id])
  
  content         String           @db.Text
  
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt

  @@index([chapterId])
  @@index([authorId])
}

model Review {
  id              Int              @id @default(autoincrement())
  chapterId       Int
  chapter         Chapter          @relation(fields: [chapterId], references: [id], onDelete: Cascade)
  
  authorId        Int
  author          User             @relation(fields: [authorId], references: [id])
  
  rating          Int              // e.g., 1-5
  content         String?          @db.Text
  
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt

  @@index([chapterId])
  @@index([authorId])
}

enum CollaborationStatus {
  PENDING
  ACCEPTED
  DECLINED
}

enum CollaborationRole {
  EDITOR
  VIEWER
}

model Collaboration {
  id              Int                 @id @default(autoincrement())
  manuscriptId    Int
  manuscript      Manuscript          @relation(fields: [manuscriptId], references: [id], onDelete: Cascade)
  
  email           String              // Email of the invitee
  userId          Int?                // Linked user ID when they accept or if they already exist
  user            User?               @relation(fields: [userId], references: [id])
  
  status          CollaborationStatus @default(PENDING)
  role            CollaborationRole   @default(VIEWER)
  
  invitedAt       DateTime            @default(now())
  updatedAt       DateTime            @updatedAt

  @@unique([manuscriptId, email])
}

